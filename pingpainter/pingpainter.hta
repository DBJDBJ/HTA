<script src="js/swbem_ping_dbj.js"></script>
<script src="js/dbj_app.js"></script>
<script src="js/pingpainter_dbj.js"></script>
<script id="page_script">
    //----------------------------------------------------------------------------------
    this.DBJAPP = null;
this.onload = function () {

    dbj_main = function () {
        try {

           // debugger;

            DBJAPP = dbj.APP(dbj_ping_hta);

            // alert("Content of {0} :\n {1}".format( cfgfilename, dbj.app.cfg(cfgfilename)));
	
            //      dbj_hero.style.display = "none" ;
            dbj_pingpainter.display = "initial";
		

                var ip_to_ping = "8.8.8.8", interval = 5000 ;

                document.title = ip_to_ping + " | " + title_.innerText;

                ping_paint(ip_to_ping, dbj.trace, document.getElementById("pingstat"));

                var tid = setInterval(function () {
                    ping_paint(ip_to_ping);
                }, interval);
            } catch (x) {
                    var wmierr = dbj.wmi.err() ;

                dbj.print(
                "Exception : {0} {1}".format(
                       dbj.err2str(x),
                       (wmierr ? "WMI ERROR:" + wmierr : "")
                    )
                    );
            }
        }

    window.resizeTo(450,550);

	dbj_main();
}

</script>
